<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/textView_reminderTimings"
        style="@style/text_list"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="@string/reminder_default_timing_string" />

    <TextView
        android:id="@+id/textView_reminderTitle"
        style="@style/text_list"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_toStartOf="@+id/imageView_arrowImg"
        android:layout_toEndOf="@+id/textView_reminderTimings"
        android:text="@string/reminder_default_title_string" />

    <ImageView
        android:id="@+id/imageView_arrowImg"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_forward" />

</RelativeLayout>