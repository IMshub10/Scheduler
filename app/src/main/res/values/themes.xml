<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scheduler" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black_hole</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/grey_darkest_2c2c2e</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark_008aff</item>
        <item name="colorSecondaryVariant">@color/blue_light_007aff</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="icon_color1">@color/black</item>
    </style>

    <style name="text_list" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/icon_color1</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>
</resources>