<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scheduler" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_hole</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/grey_darkest_2c2c2e</item>
        <item name="android:colorBackground">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_dark_008aff</item>
        <item name="colorSecondaryVariant">@color/blue_light_007aff</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- colors  for views-->
        <item name="android:textColor">@color/white</item>
        <item name="icon_color1">@color/white</item>
        <item name="shape_circle_color">@color/black_hole</item>
        <item name="color_toolbar">@color/black_hole</item>

        <!-- FONT -->
        <item name="android:fontFamily">@font/roboto</item>

        <item name="colorControlNormal">@color/transparent</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">

    </style>

    <style name="text_list" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/icon_color1</item>

    </style>

    <style name="textCalendar" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="lineHeight">16sp</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="elevation">0dp</item>
    </style>
    <style name="timePickerStyleTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

    </style>

</resources>